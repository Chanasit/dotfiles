exec nm-applet

# Bluetooth: https://github.com/blueman-project/blueman
exec blueman-applet

# PulseAudio Tray
exec pasystray

# Dunst notify https://github.com/dunst-project/dunst
exec dunst

exec udiskie

# autolock https://linux.die.net/man/1/xautolock
