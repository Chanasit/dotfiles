# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_size = 2

[*.ts]
indent_size = 4

[*.json]
indent_size = 4

[*.js]
indent_size = 4

[*.jsx]
indent_size = 4

[*.scss]
indent_size = 4

[*.css]
indent_size = 4

[*.sh]
indent_size = 2

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
